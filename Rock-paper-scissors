import random

# Initialize score counters
user_score = 0
computer_score = 0

# Define valid choices
choices = ["rock", "paper", "scissors"]

print("🎮 Welcome to Rock-Paper-Scissors!")
print("You will play 5 rounds against the computer.\n")

# Run the game for 5 rounds
for round_num in range(1, 6):
    print(f"--- Round {round_num} ---")
    
    # Get user input and validate
    user_choice = input("Enter your choice (rock, paper, or scissors): ").lower()
    while user_choice not in choices:
        user_choice = input("Invalid choice. Please enter rock, paper, or scissors: ").lower()
    
    # Computer randomly selects a choice
    computer_choice = random.choice(choices)
    print(f"Computer chose: {computer_choice}")

    # Determine the winner of the round
    if user_choice == computer_choice:
        print("Result: It’s a tie!\n")
    elif (user_choice == 'rock' and computer_choice == 'scissors') or \
         (user_choice == 'paper' and computer_choice == 'rock') or \
         (user_choice == 'scissors' and computer_choice == 'paper'):
        print("Result: You win this round!\n")
        user_score += 1
    else:
        print("Result: You lose this round!\n")
        computer_score += 1

# Display final results
print("🏁 Game Over!")
print(f"Your score: {user_score}")
print(f"Computer score: {computer_score}")

# Determine overall winner
if user_score > computer_score:
    print("🎉 Overall Winner: You!")
elif user_score < computer_score:
    print("💻 Overall Winner: Computer!")
else:
    print("🤝 Overall Result: It’s a tie!")
